<%= form_for :secret, :url => {:controller => "secrets", :action => "create"} do |f| %>
  Title: <%= f.text_field :title %><br />
  Text : <%= f.text_field :text %><br />
  Whispers : <%= f.text_field :whispers %><br />
  Time for each Whisper : <%= f.text_field :time %><br />
  <%= f.submit %>
<% end %>
